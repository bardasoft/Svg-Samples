<DataTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:svg="https://vapolia.eu/svg"
              x:Class="SvgMauiDemo.Views.TextItemTemplate"
              >
    
    <VerticalStackLayout>
        <Label Text="{Binding .}" TextColor="{StaticResource Primary}" />
        <svg:SvgImage Source="plus.svg" HeightRequest="30" Aspect="Fill" HorizontalOptions="Center">
            <svg:ColorMapping OldColor="#000" NewColor="{StaticResource Primary}" />
        </svg:SvgImage>
    </VerticalStackLayout>
    
</DataTemplate>